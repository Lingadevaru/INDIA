            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/describe_marmagao"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
